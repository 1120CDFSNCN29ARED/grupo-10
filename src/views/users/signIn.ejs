<%- include('../partials/head') %>
</head>

<body>
    <%- include('../partials/header') %>
    

    <!--Pagina Sign In-->
    <main class="li-main-page">
     
        <section class="li-main-section">
     
            <form action="/users/sign-in" method="POST" class="li-main-form">
     
                <!--Titulo-->
                <h1 class="li-main-title">Registrate</h1>
     
                <!--Campos a Llenar-->
                <div class="li-main-input-data">
                    <input class="li-main-in-put" type="text" name="name" id="firstNameInput" placeholder="Nombre" value="<%= locals.oldData ? oldData.name : null %>" >
                    <% if (locals.errors && errors.name) { %>
                        <p class="text-error" id="firstName-text-error"><i class="fas fa-exclamation-circle"></i> <%= errors.name.msg %></p>
                    <% } %>  
                    <input class="li-main-in-put" type="text" name="apellido" id="lastNameInput" placeholder="Apellido" value="<%= locals.oldData ? oldData.apellido : null %>">
                    <% if (locals.errors && errors.apellido) { %>
                        <p class="text-error" id="lastName-text-error"><i class="fas fa-exclamation-circle"></i><%= errors.apellido.msg %></p>
                    <% } %> 
                    <input class="li-main-in-put" type="email" name="email" id="emailInput" placeholder="E-mail" value="<%= locals.oldData ? oldData.email : null %>" >
                    <% if (locals.errors && errors.email) { %>
                        <P class="text-error" id="email-text-error"><i class="fas fa-exclamation-circle"></i> <%= errors.email.msg %></P>
                    <% } %>
                    <input class="li-main-in-put" type="text" name="userName" id="userNameInput" placeholder="Nombre de usuario" value="<%= locals.oldData ? oldData.userName : null %>" >
                    <% if (locals.errors && errors.userName) { %>
                        <p class="text-error" id="userName-text-error"><i class="fas fa-exclamation-circle"></i> <%= errors.userName.msg %></p>
                    <% } %>             
                    <input class="li-main-in-put" type="file"  name="avatar" id="avatarInput">
                    <% if (locals.errors && errors.avatar) { %>
                        <p class="text-error" id="avatar-text-error"><i class="fas fa-exclamation-circle"></i> <%= errors.avatar.msg %></p>
                    <% } %>
                    <input class="li-main-in-put" type="password" name="password" id="passwordInput" placeholder="ContraseÃ±a" >
                    <% if (locals.errors && errors.password) { %>
                        <p class="text-error" id="password-text-error"><i class="fas fa-exclamation-circle"></i> <%= errors.password.msg %></p>
                    <% } %>
                </div>
     
                <!--Boton Registrarse-->
                <button type="submit" class="li-main-button">Registrarse</button>
            </form>
        </section>
        
    </main>   
    <%- include('../partials/footer') %>
    <script src="/js/register.js"> </script>
</body>
</html>