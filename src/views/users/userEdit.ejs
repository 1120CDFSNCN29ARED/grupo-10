<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head') %>

<body>
    <%- include('../partials/header') %>

    <!--Pagina Sign In-->
    <main class="li-main-page">
     
        <section class="li-main-section">
     
            <form action="/users/edit/<%= usuarioAEditar.id %>?_method=PUT" method="POST" class="li-main-form" enctype="multipart/form-data">
     
                <h1 class="li-main-title">Editar <%= usuarioAEditar.name %></h1>
     
                <div class="li-main-input-data">
                    <input class="li-main-in-put" type="text" name="name" value="<%= usuarioAEditar.name %>" placeholder="Nombre y Apellido"required>
                    <input class="li-main-in-put" type="email" name="email" value="<%= usuarioAEditar.email %>" placeholder="e-mail"required>
                    <input class="li-main-in-put" type="text" name="userName" value="<%= usuarioAEditar.userName %>" placeholder="Nombre de usuario"required>             
                    <input class="li-main-in-put" type="file"  name="avatar" >
                    <input class="li-main-in-put" type="password" name="password" placeholder="ContraseÃ±a" required>
                </div>
     
                <button type="submit" class="li-main-button" value="<%= usuarioAEditar.id %>" name="id">Editar</button>
            </form>
        </section>
    </main>

    <%- include('../partials/footer') %>
</body>
</html>