<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head') %>

<body>
    <%- include('../partials/header') %>

    <!--Pagina Sign In-->
    <main class="li-main-page">
     
        <section class="li-main-section">
     
            <form action="/users/sign-in" method="POST" class="li-main-form" enctype="multipart/form-data">
     
                <!--Titulo-->
                <h1 class="li-main-title">Registrate</h1>
     
                <!--Campos a Llenar-->
                <div class="li-main-input-data">
                    <input class="li-main-in-put" type="text" name="name" placeholder="Nombre" value="<%= locals.oldData ? oldData.name : null %>" >
                    <% if (locals.errors && errors.name) { %>
                        <p class="text-error"><i class="fas fa-exclamation-circle"></i> <%= errors.name.msg %></p>
                    <% } %>  
                    <input class="li-main-in-put" type="text" name="apellido" placeholder="Apellido" value="<%= locals.oldData ? oldData.name : null %>">
                    <% if (locals.errors && errors.name) { %>
                        <p class="text-error"><i class="fas fa-exclamation-circle"></i><%= errors.name.msg %></p>
                    <% } %> 
                    <input class="li-main-in-put" type="email" name="email" placeholder="E-mail" value="<%= locals.oldData ? oldData.email : null %>" >
                    <% if (locals.errors && errors.email) { %>
                        <P class="text-error"><i class="fas fa-exclamation-circle"></i> <%= errors.email.msg %></P>
                    <% } %>
                    <input class="li-main-in-put" type="text" name="userName" placeholder="Nombre de usuario" value="<%= locals.oldData ? oldData.userName : null %>" >
                    <% if (locals.errors && errors.userName) { %>
                        <p class="text-error"><i class="fas fa-exclamation-circle"></i> <%= errors.userName.msg %></p>
                    <% } %>             
                    <input class="li-main-in-put" type="file"  name="avatar" >
                    <% if (locals.errors && errors.avatar) { %>
                        <p class="text-error"><i class="fas fa-exclamation-circle"></i> <%= errors.avatar.msg %></p>
                    <% } %>
                    <input class="li-main-in-put" type="password" name="password" placeholder="ContraseÃ±a" >
                    <% if (locals.errors && errors.password) { %>
                        <p class="text-error"><i class="fas fa-exclamation-circle"></i> <%= errors.password.msg %></p>
                    <% } %>
                </div>
     
                <!--Boton Registrarse-->
                <button type="submit" class="li-main-button">Registrarse</button>
            </form>
        </section>
    </main>

    <%- include('../partials/footer') %>
</body>
</html>